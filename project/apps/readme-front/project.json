{
  "name": "readme-front",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/readme-front/src",
  "projectType": "application",
  "tags": ["app"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/readme-front",
        "index": "apps/readme-front/src/index.html",
        "main": "apps/readme-front/src/main.tsx",
        "tsConfig": "apps/readme-front/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "./apps/readme-front/public",
            "output": "./"
          }
        ],
        "viteConfig": "apps/readme-front/vite.config.ts"
      },
      "configurations": {
        "development": { "mode": "development" },
        "production": { "mode": "production" },
        "stage": { "mode": "stage" }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": { "buildTarget": "readme-front:build" },
      "configurations": {
        "development": {
          "buildTarget": "readme-front:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "readme-front:build:production",
          "hmr": false
        },
        "stage": { "buildTarget": "readme-front:build:stage", "hmr": false }
      }
    }
  }
}
