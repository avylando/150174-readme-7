
# Create a new post
POST http://localhost:3334/blog/posts HTTP/1.1
Content-Type: application/json

{
  "status": "published",
  "tags": ["tag1", "tag2"],
  "data": {
    "kind": "text",
    "name": "Post 1",
    "content": "Content 1"
  }
}

