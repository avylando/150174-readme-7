
# Create a new post
POST http://localhost:3334/blog/posts HTTP/1.1
Content-Type: application/json

{
  "authorId": "67d9e507897b919848c35d95",
  "status": "published",
  "tags": ["tag1", "tag2"],
  "kind": "text",
  "data": {
    "title": "Post 1",
    "content": "Content 1",
    "preview": "Preview 1"
  }
}

