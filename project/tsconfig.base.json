{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@avylando-readme/core": ["libs/core/src/index.ts"],
      "@avylando/config": ["libs/config/src/index.ts"],
      "@project/account-config": ["libs/account/config/src/index.ts"],
      "@project/account-notify": ["libs/account/notify/src/index.ts"],
      "@project/api-config": ["libs/api/config/src/index.ts"],
      "@project/authentication": ["libs/account/authentication/src/index.ts"],
      "@project/blog-comment": ["libs/blog/comment/src/index.ts"],
      "@project/blog-config": ["libs/blog/config/src/index.ts"],
      "@project/blog-models": ["libs/blog/models/src/index.ts"],
      "@project/blog-post": ["libs/blog/post/src/index.ts"],
      "@project/blog-user": ["libs/account/blog-user/src/index.ts"],
      "@project/exception-filters": ["libs/exception-filters/src/index.ts"],
      "@project/file-storage-config": ["libs/file-storage/config/src/index.ts"],
      "@project/file-storage-notify": ["libs/file-storage/notify/src/index.ts"],
      "@project/file-uploader": ["libs/file-storage/uploader/src/index.ts"],
      "@project/notification-config": ["libs/notification/config/src/index.ts"],
      "@project/notification-email-subscriber": [
        "libs/notification/email-subscriber/src/index.ts"
      ],
      "@project/notification-mailer": ["libs/notification/mailer/src/index.ts"],
      "@project/pipes": ["libs/pipes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
